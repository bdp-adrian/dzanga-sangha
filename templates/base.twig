<!doctype html>
<!--[if lt IE 7]><html class="no-js no-svg ie ie6 lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 7]><html class="no-js no-svg ie ie7 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 8]><html class="no-js no-svg ie ie8 lt-ie9" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js no-svg" {{ site.language_attributes }}> <!--<![endif]-->
<head>
	{% block meta %}
		{% include 'partial/meta.twig' %}
	{% endblock %}
	{% block styles %}
		<link rel="stylesheet" href="{{ site.theme.link }}/dist/theme.css" type="text/css" media="screen" />
	{% endblock %}
	{% block head %}
		<link rel="pingback" href="{{ site.pingback_url }}" />
    	{{function('wp_head')}}
	{% endblock %}
</head>

	<body id="page-body" class="{{body_class}}" data-template="base.twig">
		<a class="d-none skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>

		{% block header %}
			{% if not options.maintenance_mode %}
				{% include "partial/nav_bar.twig"  %}
			{% endif %}
		{% endblock %}

		<div class="scrolldown">
			<div class="scrolldown__text">Scroll</div>
			<div class="scrolldown__icon-container">
				<i class="scrolldown__icon icon arrow-right cta__icon"></i>
			</div>
		</div>

		<section id="content" role="main" class="content-wrapper">
			{% block content %}
				Sorry, no content
			{% endblock %}
		</section>

		{% block footer %}
			<div class="modal mobile-menu fade" id="modal-menu" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-body">
							{% include "partial/main-menu.twig" %}
						</div>
					</div>
				</div>
			</div>
			
			<footer id="footer" class="footer {% if options.maintenance_mode %}d-none{% endif %}">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
		{% block scripts %}
		    <script src="{{ site.theme.link }}/dist/index.min.js"></script>
			<script src="{{ site.theme.link }}/dist/cookieconsent.min.js"
			 id="cc-script" 
			 data-message="{{ options.cookie_consent.message }}"
			 data-dismiss="{{ options.cookie_consent.dismiss }}"
			 data-link="{{ options.cookie_consent.link.title }}"
			 data-href="{{ options.cookie_consent.link.url }}"
			></script>
		{% endblock %}
		{% include 'partial/svg_icon_defs.twig' only %}
	</body>
</html>
